<h1>Surveys</h1>

<ul>
  <% @surveys.each do |survey| %>
    <% if survey.questions.any? %>
      <li><%= link_to survey.name, survey_question_path(survey, survey.questions.first) %></li>
    <%else%>
      <li><%= link_to survey.name, survey_path(survey)%></li>
    <%end%>
  <% end %>
</ul>

<hr>

<%= link_to "New Survey", new_survey_path %>
